{
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "features": {
        "ghcr.io/devcontainers/features/dotnet:1": {
            "version": "9.0"
        },
        "ghcr.io/azure/azure-dev/azd:latest": {},
        "ghcr.io/devcontainers/features/azure-cli:latest": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-dotnettools.csdevkit",
                "EditorConfig.EditorConfig",
                "GitHub.copilot"
			]
		}
	},
    "postCreateCommand": "echo 'nameserver 8.8.8.8' | sudo tee -a /etc/resolv.conf && echo 'nameserver 1.1.1.1' | sudo tee -a /etc/resolv.conf && curl -s https://login.microsoftonline.com > /dev/null && echo 'Network connectivity verified'",
    "hostRequirements": {
        "memory": "8gb"
    },
    "remoteUser": "vscode",
    "runArgs": ["--dns=8.8.8.8", "--dns=1.1.1.1"]
}
